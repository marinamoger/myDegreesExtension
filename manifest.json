{
  "manifest_version": 3,
  "name": "MyDegrees Enhancer",
  "version": "0.1.0",
  "description": "Quality-of-life improvements for OSU MyDegrees.",
  "permissions": ["storage"],
  "icons": {},
  "action": {
    "default_title": "MyDegrees Enhancer",
    "default_popup": "ui/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mydegrees.oregonstate.edu/*"],
      "js": [
      "content/shared.js",
      "content/features/feature_titles.js",
      "content/features/feature_prereqs.js",
      "content/features/feature_notes.js",
      "content/features/feature_lockcards.js",
      "content/content.js"
      ],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "data/courses.json",
        "assets/lock.png",
        "assets/unlock.png"
      ],
      "matches": ["https://mydegrees.oregonstate.edu/*"]
    }
  ]
}